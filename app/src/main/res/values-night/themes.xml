<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PracticumAndroidDiploma" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Цвет фона -->
        <item name="colorPrimary">@color/black</item>

        <!-- Текст, который находится непосредственно на фоне -->
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>

        <!-- текст в edit text -->
        <item name="colorOnSecondary">@color/black</item>

        <!-- hint в edit text -->
        <item name="colorOnSecondaryFixed">@color/white</item>

        <!-- кнопки -->
        <item name="colorSurface">@color/light_blue</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- кнопка сброса -->
        <item name="colorAccent">@color/red</item>

        <!--позволяет динамически изменять фон окна приложения в соответствии с выбранной темой-->
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>
