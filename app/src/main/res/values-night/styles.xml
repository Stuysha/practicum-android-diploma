<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/black</item>
    </style>

    <style name="LargeFont">
        <item name="itemTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="TeamName">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BottomNavigationColored" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_navigation</item>
        <item name="itemTextColor">@color/bottom_navigation</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="itemTextAppearanceInactive">@color/bottom_navigation</item>
        <item name="itemTextAppearanceActive">@color/bottom_navigation</item>
        <item name="android:background">@color/black</item>
    </style>
</resources>
