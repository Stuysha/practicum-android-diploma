<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="9dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/item_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/search_item_shape"
            android:cropToPadding="true"
            android:scaleType="centerInside"
            tools:src="@drawable/ic_placeholder_30px" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/position_title"
            style="@style/text_22_display_medium_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnPrimary"
            tools:text="Коромысло носитель" />

        <TextView
            android:id="@+id/company_title"
            style="@style/text_16_regular_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnPrimary"
            tools:text="Колодец Инкорпорейтед Лимитед" />

        <TextView
            android:id="@+id/salary_title"
            style="@style/text_16_regular_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnPrimary"
            tools:text="100 грошей уплочено буде" />
    </LinearLayout>
</LinearLayout>
