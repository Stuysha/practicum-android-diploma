<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextStyleMedium22_500" parent="TextAppearance.AppCompat.Light.SearchResult.Title">
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="search_edittext_style">
        <item name="textAppearanceButton">@style/text_16_regular_400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorOnSecondaryFixed</item>
    </style>

    <style name="LargeFont">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TeamName">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BottomNavigationColored" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_navigation</item>
        <item name="itemTextColor">@color/bottom_navigation</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="itemTextAppearanceInactive">@style/bottom_navigation_text_style</item>
        <item name="itemTextAppearanceActive">@style/bottom_navigation_text_style</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="bottom_navigation_text_style">
        <item name="itemTextAppearanceInactive">@color/bottom_navigation</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="tool_bar">
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/text_22_display_medium_500</item>
    </style>

    <style name="text_32_display_bold_700">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="text_22_display_medium_500">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="text_16_display_medium_500">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="text_16_regular_400">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="text_16_regular_500">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="text_12_regular_400">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="search_textview_under_query">
        <item name="android:textAppearance">@style/text_16_regular_400</item>
        <item name="android:background">@drawable/search_button_shape</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:paddingHorizontal">@dimen/dimen_12dp</item>
        <item name="android:paddingVertical">@dimen/dimen_4dp</item>
    </style>

    <style name="work_place_input_layout_style">
        <item name="boxStrokeWidth">@dimen/zero_0dp</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textAppearance">@style/text_16_regular_400</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="errorEnabled">false</item>
    </style>

    <style name="work_text_input_style">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/light_blue</item>
        <item name="android:textAppearance">@style/text_16_regular_400</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="salary_layout_style">
        <item name="boxStrokeWidth">@dimen/zero_0dp</item>
        <item name="android:textColorHint">?attr/colorOnSecondaryFixed</item>
        <item name="hintTextAppearance">@style/text_12_regular_400</item>
        <item name="boxCollapsedPaddingTop">@dimen/dimen_8dp</item>
        <item name="placeholderTextAppearance">@style/text_16_regular_400</item>
        <item name="placeholderTextColor">?attr/colorOnSecondaryFixed</item>
        <item name="expandedHintEnabled">false</item>
    </style>

    <style name="salary_text_input_style">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textAppearance">@style/text_16_regular_500</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ys_display_medium_large">
        <item name="android:layout_height">26dp</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="ys_display_regular_small">
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="ys_display_regular_medium">
        <item name="android:layout_height">19dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="text_input_layout">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">@color/grey_white</item>
        <item name="boxBackgroundColor">@color/light_grey</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="cursorColor">@color/blue</item>
        <item name="endIconTint">@color/black</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextAppearance">@style/ys_display_regular_small</item>
        <item name="placeholderTextAppearance">@style/ys_display_regular_medium</item>
        <item name="placeholderTextColor">@color/grey_white</item>
    </style>

    <style name="text_input_editText">
        <item name="android:textAppearance">@style/ys_display_regular_medium</item>
        <item name="android:textColor">@color/black_white</item>
    </style>

    <style name="ImageViewPlaceholderSearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextViewPlaceholderSearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CardFilterRwItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_60dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:paddingEnd">@dimen/dimen_4dp</item>
        <item name="android:paddingStart">@dimen/dimen_16dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CardFilterText">
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>
</resources>
