<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextStyleMedium22_500" parent="TextAppearance.AppCompat.Light.SearchResult.Title">
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="search_edittext_style">
        <item name="textAppearanceButton">@style/text_16_regular_400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorOnSecondaryFixed</item>
    </style>

    <style name="LargeFont">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TeamName">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BottomNavigationColored" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_navigation</item>
        <item name="itemTextColor">@color/bottom_navigation</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="itemTextAppearanceInactive">@style/bottom_navigation_text_style</item>
        <item name="itemTextAppearanceActive">@style/bottom_navigation_text_style</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="bottom_navigation_text_style">
        <item name="itemTextAppearanceInactive">@color/bottom_navigation</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="tool_bar">
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/text_22_display_medium_500</item>
    </style>

    <style name="text_32_display_bold_700">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="text_22_display_medium_500">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="text_16_display_medium_500">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="text_16_regular_400">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="text_16_regular_500">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="search_textview_under_query">
        <item name="android:textAppearance">@style/text_16_regular_400</item>
        <item name="android:background">@drawable/search_button_shape</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:paddingHorizontal">@dimen/dimen_12dp</item>
        <item name="android:paddingVertical">@dimen/dimen_4dp</item>
    </style>
</resources>
